<section class="products-show">
  <div class="panel panel-default">
    <header class="panel-heading">
        <h1><%= link_to @product.category.name, @product.category %>
            &raquo;
            <%= @product.name %></h1>
    </header>

    <article class="product-detail">

        <div class="row">

            <div class="col-sm-4">
                <%= image_tag @product.image.url, class: 'main-img' %>
            </div>

            <div class="col-sm-8">
                <dl class="dl-horizontal">
                    <dt>Name</dt>
                    <dd><%= @product.name %></dd>
                    <dt>Description</dt>
                    <dd><%= @product.description %></dd>
                    <dt>Quantity</dt>
                    <dd><%= @product.quantity %></dd>
                    <dt>Price </dt>
                    <dd>$<%= @product.price %></dd>
                </dl>
            </div>
        </div>

    </article>
  </div>

    <article class="reviews">
        <div class="panel panel-default" style="padding:15px">
          <% if current_user %>


            <div class="form-group panel panel-success">
              <div class="panel-heading">
                Review
              </div>
              <div class="panel-body">
                <%= form_for ([@product, @product.reviews.build]) do |f| %>
                <%= f.text_area :description, class: "form-control"%><br>
              </div>
              <div style="text-align:right" class="panel-footer">
                Rating: <%= f.select :rating, options_for_select([1,2,3,4,5]), {}, { :class => '' } %>
                <%= f.submit "Submit", class: 'btn btn-primary btn-sm'%>
              </div>
                <% end %>
            </div>
          <% end %>
        </article>
          <article class="reviews">
            <% if @product.reviews %>
                <%= render @product.reviews.reverse %>
                <% end %>
        </article>

    </section>
