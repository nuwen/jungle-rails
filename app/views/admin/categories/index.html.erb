<section class="admin-categories-index">

    <header class="page-header">
        <h1>Admin &raquo; All Categories</h1>
    </header>

    <div class="well">
        <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
    </div>

    <div class="panel panel-default products">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Category</th>
                    <th># of Items</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% Category.all.each do |category| %>
                <tr>
                    <td>
                        <%= link_to category.name, category %>
                    </td>
                    <td>
                      <%= category.products.count%>
                    </td>
                    <td>
                        <%= link_to fa_icon('trash'), [:admin, category], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
</ul>

</div>

</section>
